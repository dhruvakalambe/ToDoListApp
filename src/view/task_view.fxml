<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TaskController"
      spacing="10" stylesheets="@style.css">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="To-Do List" style="-fx-font-size: 24px;" />

    <HBox spacing="10">
        <TextField fx:id="taskInput" HBox.hgrow="ALWAYS" promptText="Enter a new task" />
    </HBox>

    <HBox spacing="10">
        <DatePicker fx:id="dueDatePicker" />
        <ComboBox fx:id="priorityComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="High"/>
                    <String fx:value="Medium"/>
                    <String fx:value="Low"/>
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <Button text="Add Task" onAction="#handleAddTask" />
    <ListView fx:id="taskList" VBox.vgrow="ALWAYS" />

    <HBox spacing="10">
        <Button text="Mark as Done" onAction="#handleMarkAsDone" />
        <Button text="Delete Task" onAction="#handleDeleteTask" />
    </HBox>
</VBox>
